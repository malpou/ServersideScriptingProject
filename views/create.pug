doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Create User
    body
        h1 Create User
        form(id="createForm" method="post" action="/create/user" enctype="multipart/form-data")
            input(type="hidden", name="key", value=serverHash)
            label Username
            input(type="text", name="username", required, minlength=3, maxlength=20)
            br
            label Email
            input(type="email", name="email", required)
            br
            label Profile Picture
            input(type="file", name="profile_picture" accept="image/jpeg, image/png", required)
            br
            button(type="submit") Create User
        script.
            let form = document.getElementById('createForm');
            form.addEventListener('submit', function (event) {
                if (!this.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            });
